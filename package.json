{
  "name": "oracles",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "gulp": "^3.9.1",
    "gulp-add-src": "^0.2.0",
    "gulp-concat": "^2.6.1",
    "gulp-include": "^2.3.1",
    "gulp-order": "^1.1.1",
    "gulp-uglify": "^2.0.0",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-postcss": "^6.2.0",
    "gulp-sass": "^2.3.2",
    "gulp-sass-glob": "^1.0.6",
    "gulp-uglifycss": "^1.0.6",
    "gulp-util": "^3.0.8",
    "react-scripts": "1.0.10"
  },
  "dependencies": {
    "install": "^0.10.1",
    "npm": "^5.3.0",
    "oracles-combine-solidity": "file:src/components/oracles-combine-solidity",
    "path": "^0.12.7",
    "react": "^15.6.1",
    "react-countdown-clock": "^2.0.0",
    "react-dom": "^15.6.1",
    "react-router-dom": "^4.1.2",
    "solc": "^0.4.14",
    "sweetalert": "^1.1.3",
    "web3": "^0.19.1",
    "web3-eth": "^1.0.0-beta.18",
    "zeppelin-solidity": "^1.2.0"
  },
  "config": {
    "contract_folder": "./public/contracts",
    "combine_solidity_script": "src/components/oracles-combine-solidity/index.js",
    "zeppelin_path": "node_modules/zeppelin-solidity/contracts/crowdsale/"
  },
  "scripts": {
    "start": "npm run generateFlatSolidityContract && npm run compileContract && react-scripts start",
    "build": "npm run generateFlatSolidityContract && npm run compileContract && git submodule update --init --recursive --remote && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "generateFlatSolidityContract": "node $npm_package_config_combine_solidity_script $npm_package_config_zeppelin_path/Crowdsale.sol $npm_package_config_contract_folder",
    "compileContract": "node ./scripts/compileContract.js $npm_package_config_contract_folder/Crowdsale_flat.sol SampleCrowdsale SampleCrowdsaleToken $npm_package_config_contract_folder",
    "generateFlatSolidityCappedContract": "node $npm_package_config_combine_solidity_script $npm_package_config_zeppelin_path/CappedCrowdsale.sol $npm_package_config_contract_folder"
  }
}
